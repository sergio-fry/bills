<nav class="navbar navbar-expand-lg bg-light bg-gradient">
  <div class="container-fluid">

    <% if @organization.present? && @organization.persisted? %>
      <%= link_to @organization.name, organization_url(@organization), class: 'navbar-brand' %>
    <% else %>
      <%= link_to 'Bills', root_url, class: 'navbar-brand' %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <% if @organization.present? && @organization.persisted? %>
          <li class="nav-item">
            <%= link_to t("transactions").capitalize, organization_transactions_path(@organization), class: 'nav-link' %>
          </li>

          <li class="nav-item">
            <%= link_to t("members").capitalize, organization_memberships_path(@organization), class: 'nav-link' %>
          </li>
        <% end %>
        <% if signed_in? %>
          <%= link_to t('signout'), destroy_user_session_path, "data-method": :post, class: 'nav-link' %>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

